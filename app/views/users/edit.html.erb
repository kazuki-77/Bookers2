<h1>User info</h1>
<%= form_with model:@user,local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name %>
  
  <%= attachment_image_tag @user, :profile_image, :fill,100,100, fallback: "no-image.jpg" %>
  
  <label>Introduction</label>
  <%= f.text_area :body
  
  <%= f.submit "Update User" %>
<% end %>